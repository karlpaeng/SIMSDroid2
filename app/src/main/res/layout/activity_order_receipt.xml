<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".OrderReceipt">


    <FrameLayout
        android:id="@+id/receiptFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/btnGenImgReceipt"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollOrder">


        </ScrollView>
    </FrameLayout>

    <Button
        android:id="@+id/btnGenImgReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_small_round_white"
        android:fontFamily="@font/monsterrat_bold"
        android:padding="10dp"
        android:text="Generate Image"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:theme="@style/btn3theme"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="15dp" />
</androidx.constraintlayout.widget.ConstraintLayout>