<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_big_round_white"
    android:backgroundTint="@color/lightGr">

    <Button
        android:id="@+id/btnOkDiaTextMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_small_round_white"
        android:fontFamily="@font/monsterrat_semibold"
        android:paddingHorizontal="40dp"
        android:text="Okay"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:theme="@style/btn3theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFieldDiaTextMulti" />

    <TextView
        android:id="@+id/tvTopDiaTextMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/monsterrat_bold"
        android:text="TextView"
        android:textColor="@color/darkblue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFieldDiaTextMulti"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_small_round_white"
        android:ems="13"
        android:fontFamily="@font/monsterrat_semibold"
        android:gravity="start|top"
        android:hint="Text"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:text=""
        android:textColorHighlight="@color/lightGr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTopDiaTextMulti" />

    <Button
        android:id="@+id/btnCancelDiaTextMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_small_round_white"
        android:fontFamily="@font/monsterrat_semibold"
        android:paddingHorizontal="40dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:theme="@style/btn2theme"
        app:layout_constraintBottom_toBottomOf="@+id/btnOkDiaTextMulti"
        app:layout_constraintRight_toLeftOf="@id/btnOkDiaTextMulti"
        app:layout_constraintTop_toTopOf="@+id/btnOkDiaTextMulti" />
</androidx.constraintlayout.widget.ConstraintLayout>