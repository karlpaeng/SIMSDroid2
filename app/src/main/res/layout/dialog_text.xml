<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_big_round_white"
    android:backgroundTint="@color/lightGr">

    <Button
        android:id="@+id/btnCancelDiaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_small_round_white"
        android:fontFamily="@font/monsterrat_semibold"
        android:paddingHorizontal="40dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:theme="@style/btn2theme"
        app:layout_constraintBottom_toBottomOf="@+id/btnOkDiaText"
        app:layout_constraintRight_toLeftOf="@id/btnOkDiaText"
        app:layout_constraintTop_toTopOf="@+id/btnOkDiaText" />

    <Button
        android:id="@+id/btnOkDiaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_small_round_white"
        android:fontFamily="@font/monsterrat_semibold"
        android:paddingHorizontal="40dp"
        android:text="Okay"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:theme="@style/btn3theme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFieldDiaText" />

    <TextView
        android:id="@+id/tvTopDiaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/monsterrat_bold"
        android:text="TextView"
        android:textColor="@color/darkblue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFieldDiaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_small_round_white"
        android:ems="10"
        android:fontFamily="@font/monsterrat_semibold"
        android:hint="Name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:text=""
        android:textColorHighlight="@color/lightGr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTopDiaText" />
</androidx.constraintlayout.widget.ConstraintLayout>